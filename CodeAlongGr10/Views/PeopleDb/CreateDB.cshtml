@model PersonData
@{
    ViewData["Title"] = "CreateDB";
}

<h3>Create a new person for database</h3>

<form asp-action="CreateDB" method="post">
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <label asp-for="City"></label>
    <input asp-for="City" />
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" />
    <input type="submit" value="CreateDB" />
</form>