@model MCV.Models.PersonViewModel

   @{ViewData["Title"] = "Index";
}

<h3>List of People</h3>

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">

<p>
    <a asp-action="Create" class="btn btn-outline-secondary btn-lg">Add new person</a>
</p>
@*@Model.person.Name*@

<h4>Show data as table:</h4>

<table id="customers">
    <thead>
        <tr>
           @* <th>Id</th>*@
            <th>Name</th>
            <th>City</th>
            <th>Phone number</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.tempList)
        {
            <tr>
                @*<td>@person.Id</td>*@
                <td>@person.Name</td>
                <td>@person.City</td>
                <td>@person.PhoneNumber</td>
                <td><a asp-action="Delete" asp-route-id=@person.Id class="btn btn-danger">Delete</a> </td>
            </tr>
        }
    </tbody>
</table>

